<td>
    {% if object.status == 'draft' %}
        <span class="badge bg-primary"><i class="fas fa-pencil-alt"></i> Draft</span>
    {% elseif object.status == 'published' %}
        <span class="badge bg-success"><i class="fas fa-check"></i> Published</span>
    {% elseif object.status == 'unpublished' %}
        <span class="badge bg-danger"><i class="fas fa-times"></i> Unpublished</span>
    {% endif %}
</td>